<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Add Sprint field to task form -->
  <record id="view_task_form_inherit_sprint" model="ir.ui.view">
    <field name="name">project.task.form.inherit.sprint</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='project_id']" position="after">
        <field name="sprint_id"
               domain="[('project_id', '=', project_id)]"
               options="{'no_create_edit': False}"/>
      </xpath>
    </field>
  </record>

   <!-- Add Sprint filters + group-by in task search -->
  <record id="view_task_search_inherit_sprint" model="ir.ui.view">
    <field name="name">project.task.search.inherit.sprint</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_search_form"/>
    <field name="arch" type="xml">
      <xpath expr="//search" position="inside">
        <field name="sprint_id"/>
        <filter string="Has Sprint" name="has_sprint" domain="[('sprint_id', '!=', False)]"/>
        <group expand="0" string="Group By">
          <filter string="Sprint" name="group_by_sprint" context="{'group_by': 'sprint_id'}"/>
        </group>
      </xpath>
    </field>
  </record>

  <!-- Ensure the project's name in the task editor is read only while editing a task inside the sprint-->
  <record id="project_task_form_readonly_project_from_sprint" model="ir.ui.view">
    <field name="name">project.task.form.readonly.project.from.sprint</field>
    <field name="model">project.task</field>
    <field name="inherit_id" ref="project.view_task_form2"/>
    <field name="arch" type="xml">
      <xpath expr="//form" position="inside">
        <field name="from_sprint" invisible="1"/>
      </xpath>
      <xpath expr="//field[@name='project_id']" position="attributes">
        <attribute name="attrs">{'readonly': [('from_sprint', '=', True)]}</attribute>
      </xpath>
    </field>
  </record>
</odoo>
